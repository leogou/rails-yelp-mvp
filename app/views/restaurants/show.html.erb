<h2><%= @restaurant.name %></h2>
<div class="list">
  <li>Address: <%=  @restaurant.address %></li>
  <li>Phone number: <%=  @restaurant.phone_number %></li>
  <li>Foodtype: <%=  @restaurant.category %></li>
</div>

  <div>
    <%= link_to 'Return to the view of all restaurants', restaurants_path %>
  </div>

<h3>Reviews</h3>
<ul class="list-group">
  <% @restaurant.reviews.each do |review| %>
    <li class="list-group-item"><%= review.content %></li>
    <li class="list-group-item"><%= review.rating %></li>
  <% end %>
</ul>

<%= link_to "Add a review", new_restaurant_review_path(@restaurant) %>
